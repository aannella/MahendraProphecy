<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="company.mahendraprophecy.REGISTER_LOGIN.REGISTER_LOGIN">

    <io.karim.MaterialTabs
        android:id="@+id/login_register_tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="10dp"
        flatui:mtIndicatorColor="#FE9508"
        flatui:mtSameWeightTabs="true"
        flatui:mtTextColorSelected="@color/orange" />

    <android.support.v4.view.ViewPager
        android:id="@+id/register_login_pager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/sadWhite" />

</LinearLayout>
