<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <WebView
        android:id="@+id/agreement_webview"
        android:layout_width="match_parent"
        android:layout_above="@+id/agreement_layout"
        android:paddingBottom="15dp"
        android:paddingRight="6dp"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/agreement_layout"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:elevation="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="10dp"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:layout_margin="8dp"
            android:text="By Clicking 'I Agree', I confirm that I read and agree to above Terms, Privacy Policy and Disclaimer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/agree"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="#00C853"
                android:fontFamily="sans-serif-condensed"
                android:padding="8dp"
                android:gravity="center_horizontal"
                android:text="I Agree"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/exit"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif-condensed"
                android:padding="8dp"
                android:text="Exit"
                android:textColor="#FFFFFF"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="18dp"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>