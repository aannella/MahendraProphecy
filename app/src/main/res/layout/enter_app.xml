<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="company.mahendraprophecy.ENTER_APP">


    <LinearLayout
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/sadWhite"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/login_indicator"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="#ffffff"
            android:gravity="center"></RelativeLayout>


        <RelativeLayout
            android:id="@+id/register_indicator"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_margin="4dp"
            android:background="#ff02c08c"></RelativeLayout>


    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/loginRegisterPager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/loginRegisterTabs"
        android:layout_below="@+id/indicator"
        android:background="@color/sadWhite" />


    <io.karim.MaterialTabs
        android:id="@+id/loginRegisterTabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="#ff02c08c"
        android:elevation="10dp"
        app:mtIndicatorColor="@color/sadWhite"
        app:mtPaddingMiddle="false"
        app:mtSameWeightTabs="true"
        app:mtTextAllCaps="true"></io.karim.MaterialTabs>

</RelativeLayout>
