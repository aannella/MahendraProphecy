<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sadWhite"
    android:orientation="vertical"
    tools:context="company.mahendraprophecy.PROFILE.PROFILE">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/sadWhite"
        android:layout_height="48dp">

        <ImageButton
            android:layout_width="38dp"
            android:id="@+id/profile_back"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/privacy_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:fontFamily="sans-serif-condensed"
            android:padding="10dp"
            android:textSize="19sp"
            android:text="Profile"
            android:gravity="center_vertical" />
        </LinearLayout>


    <io.karim.MaterialTabs
        android:id="@+id/profileTabs"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:background="#000000"
        android:elevation="10dp"
        android:foregroundGravity="center"
        app:mtIndicatorColor="#FFFFFF"
        app:mtIndicatorHeight="1dp"
        app:mtMrlRippleColor="#FFFFFF"
        app:mtSameWeightTabs="false"></io.karim.MaterialTabs>


    <android.support.v4.view.ViewPager
        android:id="@+id/profilePager"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/sadWhite"
        android:elevation="10dp" />

</LinearLayout>
