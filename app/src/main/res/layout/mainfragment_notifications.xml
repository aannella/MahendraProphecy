<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sadWhite"
    tools:context="company.mahendraprophecy.MAIN_FRAGMENTS.MARKET_QUOTES">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#FE9508"
            android:elevation="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?android:attr/selectableItemBackground"
                android:padding="14dp"
                android:scaleType="centerInside"
                android:src="@drawable/back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/books_back"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:text="Messages"
                android:textColor="#FFFFFF"
                android:textSize="19sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="65dp"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/notifications_webview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></WebView>

            <com.pnikosis.materialishprogress.ProgressWheel
                android:id="@+id/notification_progress_wheel"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                wheel:matProg_barColor="#FE9508"
                wheel:matProg_progressIndeterminate="true" />

            <LinearLayout
                android:id="@+id/notification_loginlayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="#FFFFFF"
                android:gravity="center"
                android:paddingBottom="65dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:padding="20dp"
                    android:text="Please Login / Register to see Notifications &amp; Important Updates on Stock Market"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/notification_login_register"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="#FE9508"
                    android:elevation="10dp"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:text="LOGIN / REGISTER"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:elevation="4dp"
        android:background="@color/orange"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/services"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:scaleType="centerInside"
                android:src="@drawable/services_tabs" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Services"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/book"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/tb_books" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Books"
                android:textColor="@color/white" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/market"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:src="@drawable/tb_market" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Markets"
                android:textColor="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/contact"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="?android:attr/selectableItemBackground"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/tb_contact" />

            <TextView
                android:layout_width="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Contact"
                android:textColor="@color/white" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:id="@+id/message"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#33000000"
            android:orientation="vertical">

            <ImageView
                android:layout_width="40dp"
                android:padding="8dp"
                android:layout_height="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/tb_message" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center"
                android:text="Messages"
                android:textColor="@color/white" />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
