<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sadWhite"
    tools:context="company.mahendraprophecy.MAIN_FRAGMENTS.MARKET_QUOTES">

    <ListView
        android:id="@+id/servies_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/serviceslistview_progress_wheel"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        wheel:matProg_barColor="#FE9508"
        wheel:matProg_progressIndeterminate="true" />

</RelativeLayout>
