<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/forgotpass_mail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="15dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_horizontal"
        android:hint="Enter Registered Email Address"
        android:inputType="textEmailAddress"
        android:textColor="#80000000"
        android:textSize="18sp"
        app:met_baseColor="#666666"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelText="Email Address"
        app:met_floatingLabelTextColor="#666666"
        app:met_primaryColor="#80000000"
        app:met_singleLineEllipsis="true"
        app:met_textColorHint="#80000000" />

    <TextView
        android:id="@+id/password_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:fontFamily="sans-serif-condensed"
        android:text="Request Password Reset"
        android:textAllCaps="true"
        android:textColor="#1259A7"
        android:textStyle="bold" />

</LinearLayout>