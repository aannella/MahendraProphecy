<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="company.mahendraprophecy.REGISTER_LOGIN.REGISTER">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="60dp"
        android:orientation="horizontal">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/login_mail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="sans-serif-condensed"
            android:hint="Registered Email Address"
            android:inputType="textEmailAddress"
            android:textColor="#80000000"
            android:textSize="18sp"
            app:met_baseColor="#666666"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Email Address"
            app:met_floatingLabelTextColor="#666666"
            app:met_primaryColor="#80000000"
            app:met_singleLineEllipsis="true"
            app:met_textColorHint="#80000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/login_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#80000000"
            android:textSize="18sp"
            app:met_baseColor="#666666"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="Password"
            app:met_floatingLabelTextColor="#666666"
            app:met_primaryColor="#666666"
            app:met_singleLineEllipsis="true"
            app:met_textColorHint="#80000000" />

        <ImageButton
            android:id="@+id/show_login_password"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="?android:attr/selectableItemBackground"
            android:padding="6dp"
            android:scaleType="centerInside"
            android:src="@drawable/showpass_grey" />
    </LinearLayout>


    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/orange"
        android:fontFamily="sans-serif-condensed"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:text="Sign in with Email"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Don't have an account yet ?" />

        <TextView
            android:id="@+id/takeToRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="4dp"
            android:text="Register"
            android:textColor="#1259A7"
            android:textSize="17sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-condensed"
        android:padding="10dp"
        android:text="Forgot Password?"
        android:textColor="#1259A7" />

</LinearLayout>
